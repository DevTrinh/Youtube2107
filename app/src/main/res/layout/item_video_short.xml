<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <VideoView
        android:id="@+id/vv_item_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ProgressBar
        android:id="@+id/pb_item_short"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/iv_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp32"
        android:layout_marginRight="@dimen/dp32"
        android:src="@drawable/ic_camera_white28"/>


    <ImageView
        android:id="@id/iv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_camera"
        app:layout_constraintRight_toLeftOf="@id/iv_camera"
        app:layout_constraintBottom_toBottomOf="@id/iv_camera"
        android:src="@drawable/ic_search_white_28"
        android:layout_marginRight="@dimen/dp18"/>

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tv_like"
        app:layout_constraintLeft_toLeftOf="@id/tv_like"
        app:layout_constraintRight_toRightOf="@id/tv_like"
        android:src="@drawable/ic_thumb_up28"/>

    <TextView
        android:id="@+id/tv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/iv_dislike"
        app:layout_constraintLeft_toLeftOf="@id/iv_dislike"
        app:layout_constraintRight_toRightOf="@id/iv_dislike"
        android:layout_marginBottom="@dimen/dp32"
        android:text="@string/like"
        android:textColor="@color/white"
        android:textSize="@dimen/dp16"/>

    <ImageView
        android:id="@+id/iv_dislike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tv_dislike"
        app:layout_constraintLeft_toLeftOf="@id/tv_dislike"
        app:layout_constraintRight_toRightOf="@id/tv_dislike"
        android:src="@drawable/ic_thumb_down28"/>

    <TextView
        android:id="@+id/tv_dislike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/iv_comment"
        app:layout_constraintLeft_toLeftOf="@id/iv_comment"
        app:layout_constraintRight_toRightOf="@id/iv_comment"
        android:layout_marginBottom="@dimen/dp32"
        android:text="@string/dislike"
        android:textColor="@color/white"
        android:textSize="@dimen/dp16"/>

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tv_comment"
        app:layout_constraintLeft_toLeftOf="@id/tv_comment"
        app:layout_constraintRight_toRightOf="@id/tv_comment"
        android:src="@drawable/ic_comment_white28"/>

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/iv_share"
        app:layout_constraintLeft_toLeftOf="@id/iv_share"
        app:layout_constraintRight_toRightOf="@id/iv_share"
        android:layout_marginBottom="@dimen/dp32"
        android:text="@string/_6_1k"
        android:textColor="@color/white"
        android:textSize="@dimen/dp16"/>

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tv_share"
        app:layout_constraintLeft_toLeftOf="@id/tv_share"
        app:layout_constraintRight_toRightOf="@id/tv_share"
        android:src="@drawable/ic_white_share28"/>

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/iv_eclipse"
        app:layout_constraintLeft_toLeftOf="@id/iv_eclipse"
        app:layout_constraintRight_toRightOf="@id/iv_eclipse"
        android:layout_marginBottom="@dimen/dp16"
        android:text="@string/share"
        android:textSize="@dimen/dp16"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/iv_eclipse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/iv_gif_logo"
        app:layout_constraintLeft_toLeftOf="@id/iv_gif_logo"
        app:layout_constraintRight_toRightOf="@id/iv_gif_logo"
        android:layout_marginBottom="@dimen/dp12"
        android:src="@drawable/ic_white_elipse_horizontal28"/>

    <ImageView
        android:id="@+id/iv_gif_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintWidth_percent="0.2"
        android:layout_marginBottom="@dimen/dp12"
        android:src="@drawable/ic_short"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avt_channel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.16"
        app:layout_constraintHeight_percent="0.09"
        android:paddingVertical="@dimen/dp12"
        android:layout_marginLeft="@dimen/dp12"
        android:src="@drawable/avt_test"/>

    <TextView
        android:id="@+id/tv_title_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_avt_channel"
        app:layout_constraintLeft_toRightOf="@id/iv_avt_channel"
        app:layout_constraintBottom_toBottomOf="@id/iv_avt_channel"
        android:maxLines="1"
        android:maxWidth="@dimen/dp170"
        android:ellipsize="end"
        android:text="@string/v_a_h_c_v_a_nh_n_b_u_tr_i_xanh_tuy_t_p_h_c_c_ng_t_i_b_s_u_t_p_nh_c_n_n_xu_t_1_gi"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/dp16"/>

    <TextView
        android:id="@+id/tv_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_title_channel"
        app:layout_constraintLeft_toRightOf="@id/tv_title_channel"
        app:layout_constraintBottom_toBottomOf="@id/tv_title_channel"
        android:layout_marginLeft="@dimen/dp6"
        android:padding="@dimen/dp3"
        android:text="@string/subscribe"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/red"/>

    <TextView
        android:id="@+id/tv_title_short"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/iv_avt_channel"
        app:layout_constraintLeft_toLeftOf="@id/iv_avt_channel"
        android:textColor="@color/white"
        android:maxLines="2"
        android:maxWidth="@dimen/dp280"
        android:ellipsize="end"
        android:text="@string/v_a_h_c_v_a_nh_n_b_u_tr_i_xanh_tuy_t_p_h_c_c_ng_t_i_b_s_u_t_p_nh_c_n_n_xu_t_1_gi"/>

</androidx.constraintlayout.widget.ConstraintLayout>