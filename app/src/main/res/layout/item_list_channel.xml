<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_contains_list_in_video"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp12"
    android:paddingVertical="@dimen/dp6">

    <ImageView
        android:id="@+id/iv_list_channel"
        android:layout_width="180dp"
        android:layout_height="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/iv_khoa_pham"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_number_video_in_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/iv_list_channel"
        app:layout_constraintRight_toRightOf="@id/iv_list_channel"
        app:layout_constraintBottom_toBottomOf="@id/iv_list_channel"
        app:layout_constraintLeft_toLeftOf="@id/iv_list_channel"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHorizontal_bias="1"
        android:paddingBottom="@dimen/dp22"
        android:text="@string/txt194"
        android:textColor="@color/white"
        android:textSize="@dimen/dp18"
        android:gravity="center"
        android:background="@color/blur_black"/>

    <ImageView
        android:id="@+id/iv_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_number_video_in_image"
        app:layout_constraintLeft_toLeftOf="@id/tv_number_video_in_image"
        app:layout_constraintRight_toRightOf="@id/tv_number_video_in_image"
        app:layout_constraintBottom_toBottomOf="@id/tv_number_video_in_image"
        android:layout_marginTop="@dimen/dp32"
        android:src="@drawable/ic_playlist_white"/>

    <TextView
        android:id="@+id/tv_title_list_channel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_list_channel"
        app:layout_constraintLeft_toRightOf="@id/iv_list_channel"
        app:layout_constraintRight_toLeftOf="@id/iv_menu_right_list_channel"
        android:layout_marginLeft="@dimen/dp12"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/v_a_h_c_v_a_nh_n_b_u_tr_i_xanh_tuy_t_p_h_c_c_ng_t_i_b_s_u_t_p_nh_c_n_n_xu_t_1_gi"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_name_channel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title_list_channel"
        app:layout_constraintLeft_toRightOf="@id/iv_list_channel"
        app:layout_constraintRight_toLeftOf="@id/iv_menu_right_list_channel"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginTop="@dimen/dp6"
        android:text="@string/pike"
        android:textColor="@color/color51"/>

    <TextView
        android:id="@+id/tv_number_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_list_channel"
        app:layout_constraintTop_toBottomOf="@id/tv_name_channel"
        app:layout_constraintRight_toRightOf="@id/tv_name_channel"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginTop="@dimen/dp6"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/_194_video"
        android:textColor="@color/color51"/>

    <ImageView
        android:id="@+id/iv_menu_right_list_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
       android:padding="@dimen/dp4"
        android:src="@drawable/ic_menu_vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>